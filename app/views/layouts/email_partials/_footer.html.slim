      li
        = link_to t('footer.service.faq'), link_to t('shared.urls.faq'), target: 'blank'
      li
        = link_to t('footer.service.forum'), t('shared.urls.forum'), target: 'blank'
      li
        = link_to t('footer.service.contact'), t('shared.urls.contact'), target: 'blank'
      li
        = link_to t('footer.company.about_us'), t('shared.urls.about_us'), target: 'blank'
